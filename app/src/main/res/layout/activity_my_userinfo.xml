<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x22">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlyt_myinfo_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_margin="@dimen/y22"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="头像" />

                <com.codingfeel.sm.views.CircleImageView
                    android:id="@+id/iv_my_info_head"
                    android:layout_width="@dimen/x84"
                    android:layout_height="@dimen/y84"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/my_page_line_color" />

            <RelativeLayout

                android:id="@+id/rlyt_myinfo_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_margin="@dimen/y22"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/tv_my_info_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="呵呵哒" />


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>