<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_post_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginRight="@dimen/x17"
            android:layout_marginTop="@dimen/y21"
            android:background="@color/search_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.codingfeel.sm.views.GoogleIconFontTextView
                    android:id="@+id/tv_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="&#xE5D2;"
                    android:textColor="@color/themeColor_red"
                    android:textSize="@dimen/x60" />

                <EditText
                    android:id="@+id/et_post_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/tv_add"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/home_add_animation"
                    android:scaleType="fitXY"
                    android:text="&#xE145;" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>